<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.epg.activity.EPGActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:paddingBottom="8dp"
        android:paddingEnd="@dimen/margin_activity_16dp"
        android:paddingStart="@dimen/margin_activity_16dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/epg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_profile"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_company_logo_small"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_search"
            tools:ignore="ContentDescription"/>

    </android.support.constraint.ConstraintLayout>

    <com.dmanluc.epg.presentation.widgets.EPGWidget
        android:id="@+id/epg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/epgBackgroundColor"
        app:epgBackgroundColor="@color/epgBackgroundColor"
        app:epgChannelBackgroundColor="@color/epgChannelBackgroundColor"
        app:epgChannelCurrentEventBackgroundColor="@color/epgCurrentChannelEventBackgroundColor"
        app:epgChannelEventBackgroundColor="@color/epgChannelEventBackgroundColor"
        app:epgChannelEventScheduleColor="@color/epgChannelEventScheduleColor"
        app:epgChannelEventTextSize="@dimen/textSize_epg_event_14sp"
        app:epgChannelEventTitleColor="@color/epgChannelEventTitleColor"
        app:epgChannelHeight="@dimen/height_epg_channel_70dp"
        app:epgChannelMargin="@dimen/margin_epg_channel_1dp"
        app:epgChannelPadding="@dimen/padding_epg_channel_8dp"
        app:epgChannelWidth="@dimen/width_epg_channel_70dp"
        app:epgNowButtonMargin="@dimen/margin_epg_nowButton_16dp"
        app:epgNowButtonText="@string/now_button_text"
        app:epgTimeBarHeight="@dimen/height_epg_timeBar_48dp"
        app:epgTimeBarLineColor="@color/epgCurrentTimeBarColor"
        app:epgTimeBarLineWidth="@dimen/width_epg_timeBarLine_1dp"
        app:epgTimeBarTextSize="@dimen/textSize_epg_timeBar_14sp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintTop_toBottomOf="@id/headerBar"/>

    <FrameLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/backgroundGreyTransparent"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        tools:visibility="visible">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadingIndicator"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:indicatorColor="@color/epgCurrentTimeBarColor"
            app:indicatorName="LineScaleIndicator"
            />

    </FrameLayout>

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/epgCurrentTimeBarColor"
        android:elevation="3dp"
        android:text="@string/app_refresh_data"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/epgChannelBackgroundColor"
        app:itemIconTint="@color/bottom_navigation_color_state"
        app:itemTextColor="@color/epgCurrentTimeBarColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/epg"
        app:menu="@menu/bottom_navigation_menu"/>

</android.support.constraint.ConstraintLayout>